<h1>All Items</h1>
<%= link_to 'Add new item', new_item_path %>
<ul>
  <% @items.each do |item| %>
    <li>
      <%= link_to item.name, item_path(item) %> -
      <%= link_to 'Edit', edit_item_path(item) %> -
      <%= link_to 'Delete', item_path(item), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Deleting #{item.name} will remove it from all warehouses."
                  } %>
    </li>
  <% end %>
</ul>
<%= link_to 'Back to home', root_path %>
